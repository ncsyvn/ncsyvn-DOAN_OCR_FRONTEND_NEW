@{
    ViewBag.Title = "Chi tiết";
}
@using OCR.Models;
@model UserModel
<div class="breadcrumb">
    <ul>
        <li><a href="#">ORC</a></li>
        <li>Chi tiết người dùng</li>
    </ul>
</div>
<div class="separator-breadcrumb border-top"></div>
<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="row">
                <div class="col-md-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center border-bottom-dotted-dim pb-3 mb-3 justify-content-center">
                            <img class="rounded mr-3" src="@Model.data.user.anh_mat_truoc" alt="">
                        </div>
                        <div class="d-flex align-items-center border-bottom-dotted-dim pb-3 mb-3 justify-content-center">
                            <img class="rounded mr-3" src="@Model.data.user.anh_mat_sau" alt="">
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <form class="needs-validation" novalidate="novalidate">
                            <div class="form-row">
                                <div class="col-md-12 mb-8">
                                    <label for="identity" id="lb-identity">Số thẻ:</label>
                                    <input class="form-control" id="identity" type="text" value="@Model.data.user.so_the" required="required" />
                                    <div class="invalid-feedback">
                                        Số thẻ là bắt buộc
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-12 mb-8">
                                    <label for="name" id="lb-name">Họ và tên:</label>
                                    <input class="form-control" id="name" type="text" placeholder="Last name" value="@Model.data.user.ho_va_ten" required="required" />
                                    <div class="invalid-feedback">
                                        Họ và tên là bắt buộc
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-8">
                                    <label for="date-of-birth">Ngày, tháng, năm sinh:</label>
                                    <input class="form-control datepicker" id="date-of-birth" data-date-format="mm/dd/yyyy">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label class="ul-form__label" for="gender">Giới tính</label>
                                    <div class="ul-form__radio-inline">
                                        <label class="ul-radio__position radio radio-primary form-check-inline">
                                            <input type="radio" name="gender" value="0" checked="@(Model.data.user.gioi_tinh.ToLower().Equals("nam")?true:false)" /><span class="ul-form__radio-font">Nam</span><span class="checkmark"></span>
                                        </label>
                                        <label class="ul-radio__position radio radio-primary">
                                            <input type="radio" name="gender" value="0" checked="@(Model.data.user.gioi_tinh.ToLower().Equals("nam")?false:true)" /><span class="ul-form__radio-font">Nữ</span><span class="checkmark"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-8">
                                    <label for="country" id="lb-country">Quê quán:</label>
                                    <input class="form-control" id="country" type="text" value="@Model.data.user.que_quan" required="required" disabled />
                                    <div class="invalid-feedback">
                                        Quê quán là bắt buộc
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-8">
                                    <label for="country" id="lb-country" style="width:100px;">Tỉnh/TP:</label>
                                    <input class="form-control d-inline-block" style="        width: calc(100% - 105px);" id="country" type="text" value="@Model.data.user.que_quan_tinh" required="required" />
                                    <div class="invalid-feedback">
                                        Tỉnh/TP là bắt buộc
                                    </div>
                                    <label for="district" id="lb-district" style="width:100px;">Quận/Huyện:</label>
                                    <input class="form-control d-inline-block" style="width:calc(100% - 105px);" id="district" type="text" value="@Model.data.user.que_quan_huyen" required="required" />
                                    <div class="invalid-feedback">
                                        Quận/Huyện là bắt buộc
                                    </div>
                                    <label for="town" id="lb-town" style="width:100px;">Phường/Xã:</label>
                                    <input class="form-control d-inline-block" style="        width: calc(100% - 105px);" id="town" type="text" value="@Model.data.user.que_quan_xa" required="required" />
                                    <div class="invalid-feedback">
                                        Phường/Xã là bắt buộc
                                    </div>
                                </div>

                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-8">
                                    <label for="country" id="lb-country">Thường trú:</label>
                                    <input class="form-control" id="country" type="text" value="@Model.data.user.thuong_tru" required="required" disabled />
                                    <div class="invalid-feedback">
                                        Thường trú là bắt buộc
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-8">
                                    <label for="country" id="lb-country" style="width:100px;">Tỉnh/TP:</label>
                                    <input class="form-control d-inline-block" style="        width: calc(100% - 105px);" id="country" type="text" value="@Model.data.user.thuong_tru_tinh" required="required" />
                                    <div class="invalid-feedback">
                                        Tỉnh/TP là bắt buộc
                                    </div>
                                    <label for="district" id="lb-district" style="width:100px;">Quận/Huyện:</label>
                                    <input class="form-control d-inline-block" style="width:calc(100% - 105px);" id="district" type="text" value="@Model.data.user.thuong_tru_huyen" required="required" />
                                    <div class="invalid-feedback">
                                        Quận/Huyện là bắt buộc
                                    </div>
                                    <label for="town" id="lb-town" style="width:100px;">Phường/Xã:</label>
                                    <input class="form-control d-inline-block" style="        width: calc(100% - 105px);" id="town" type="text" value="@Model.data.user.thuong_tru_xa" required="required" />
                                    <div class="invalid-feedback">
                                        Phường/Xã là bắt buộc
                                    </div>
                                </div>

                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-8">
                                    <label for="create-date">Ngày cấp:</label>
                                    <input class="form-control datepicker" id="create-date" data-date-format="mm/dd/yyyy">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-8">
                                    <label for="expiry-date">Có giá trị đến ngày:</label>
                                    <input class="form-control datepicker" id="expiry-date" data-date-format="mm/dd/yyyy">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-12 mb-8">
                                    <label for="name" id="lb-name">Nơi cấp:</label>
                                    <input class="form-control" id="name" type="text" placeholder="Last name" value="@Model.data.user.noi_cap" required="required" />
                                    <div class="invalid-feedback">
                                        Nơi cấp là bắt buộc
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary" type="submit">Lưu</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section childscript {
    <script>
        $('#date-of-birth').datepicker('setDate', new Date("@Model.data.user.ngay_sinh".replace(/(\d{2})-(\d{2})-(\d{4})/, "$2/$1/$3")));
        $('#create-date').datepicker('setDate', new Date("@Model.data.user.ngay_cap".replace(/(\d{2})-(\d{2})-(\d{4})/, "$2/$1/$3")));
        $('#expiry-date').datepicker('setDate', new Date("@Model.data.user.co_gia_tri_den".replace(/(\d{2})-(\d{2})-(\d{4})/, "$2/$1/$3")));
    </script>
}
